  "description": "Learn lao language while playing.",
  "private": true,
  "engines": {
    "node": "~8.9.0",
    "npm": "~5.6.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod --aot",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npm-reset": "rm -rf node_modules && npm cache verify && npm i",
    "git-reset": "git reset HEAD --hard && git clean -fd && git pull",
    "git-refresh": "git fetch --all --tags --prune",
    "serve": "npm run cleanserver && npm run launchserver && pm2 logs laolol-dev",
    "firstdeploy": "npm run update && npm run build && npm run releaseserver && pm2 start ./dist/server.js --name laolol -i 1",
    "deploy": "npm run build && npm run releaseserver && pm2 restart laolol",
    "releaseserver": "webpack -p --config ./server.webpack.config.ts",
    "launchserver": "export NODE_ENV=development pm2 install typescript && pm2 start ./server.ts --watch -f --name laolol-dev",
    "cleanserver": "pm2 delete laolol-dev --silent || :",
    "stopserver": "pm2 stop laolol-dev --silent || :"
  },
